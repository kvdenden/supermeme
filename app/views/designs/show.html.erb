<% title "\"#{@text}\" #{@product_title}" %>
<% description "Custom \"#{@text}\" #{@product_title} in the iconic Supreme box logo style." %>
<% set_meta_tags og: {
  image: {
    _: @mockup_url,
    alt: @variant_title
  }
} %>

<div class="container">
  <p class="small text-center step">Step 2 of 4</p>
  <h1 class="page-title">Choose your size and T-shirt color</h1>
  <div class="row">
    <div class="col-md-6" id="preview-image">
      <%= image_tag @mockup_url, alt: @variant_title %>
    </div>
    <div class="col-md-6" id="customise-design">
      <p><%= image_tag @image_url, alt: @design_title %></p>

      <div class="description">
        <h2><%= @product_title %></h2>
        <div class="price">
          <%= number_to_currency(@variant.price) %>
        </div>
      </div>
      <div id="variant-form">
        <%= render "designs/form", text: @text, product: @product, variant: @variant %>
      </div>

      <div class="text-center text-muted">
        <p>Secure checkout with</p>
        <%= render "trust_signals" %>
      </div>

      <p class="text-center"><%= link_to "Change design", new_design_path(text: @text) %></p>

    </div>

    </div>
<hr class="divider my-5">
      <div class="row my-3">
        <div class="col-md-6">
          <h3>Product description</h3>
          <%= html_description(@product) %>
        </div>
        <div class="col-md-6">
        <div class="size-guide">
          <h3>Size guide</h3>
          <%= render "size_chart" %>
        </div>
      </div>

    </div>
  </div>
</div>
