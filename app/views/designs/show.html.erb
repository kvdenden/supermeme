<div class="container">
  <h1 class="page-title"><%= @text %></h1>
  <div class="row">
    <div class="col-md-6" id="preview-image">
      <%= image_tag @mockup_path, alt: "Black T-Shirt with \"#{@text}\"" %>
    </div>
    <div class="col-md-6" id="customise-design">
      <%= image_tag @image_path, alt: @text %>

      <%= render "designs/form", text: @text, available_sizes: @available_sizes, available_colors: @available_colors %>

      <h4>Product description</h4>
      <%= html_description(@product) %>

      <h3>Size guide</h3>
      <table>
        <tbody>
          <tr>
            <td></td>
            <td><strong>XS</strong></td>
            <td><strong>S</strong></td>
            <td><strong>M</strong></td>
            <td><strong>L</strong></td>
            <td><strong>XL</strong></td>
          </tr>
          <tr>
            <th>Chest (inches)</th>
            <td>30-32</td>
            <td>34-36</td>
            <td>38-40</td>
            <td>42-44</td>
            <td>46-48</td>
          </tr>
          <tr>
            <th>Waist (inches)</th>
            <td>28-30</td>
            <td>30-32</td>
            <td>32-33</td>
            <td>33-34</td>
            <td>36-38</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

</div>
